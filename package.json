  "files": [
    "dist",
    "libs"
  ],
  "dependencies": {
    "@types/chrome": "0.0.52",
    "tiny-emitter": "^2.0.0"
  },
  "devDependencies": {
    "chrome-env": "0.1.0",
    "es6-promise": "^4.0.5",
    "eslint": "^4.0.0",
    "eslint-config-prettier": "^2.7.0",
    "eslint-config-standard": "^10.2.0",
    "eslint-plugin-html": "^3.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-node": "^5.0.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "jasmine-core": "^2.5.2",
    "karma": "^1.3.0",
